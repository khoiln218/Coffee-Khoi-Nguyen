<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_button_background"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingVertical="8dp"
            android:paddingLeft="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp" />

                <TextView
                    android:id="@+id/tvKhachHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khách hàng" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/clock" />

                <TextView
                    android:id="@+id/tvThoiGianTao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:11:30" />

                <TextView
                    android:id="@+id/tvTongTien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="5dp"
                    android:text="50.000VND"
                    android:textStyle="bold" />
            </LinearLayout>

            <me.next.tagview.TagCloudView
                android:id="@+id/tcvSanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:tcvCanTagClick="false"
                app:tcvTextColor="@android:color/white"
                app:tcvTextSize="8sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/separateLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/separateLineColor"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/layoutChinhSua"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnThanhToan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/transparent_button_background"
                android:padding="10dp"
                android:src="@drawable/orderlist_10" />

            <ImageButton
                android:id="@+id/btnChinhSua"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/transparent_button_background"
                android:padding="10dp"
                android:src="@drawable/orderlist_11" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
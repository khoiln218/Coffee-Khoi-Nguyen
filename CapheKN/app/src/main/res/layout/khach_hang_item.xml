                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/tvTen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="KhÃ´i" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTongTien"
            android:layout_width="wrap_content"
